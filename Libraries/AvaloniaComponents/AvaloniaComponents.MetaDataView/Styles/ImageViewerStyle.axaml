<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:my="clr-namespace:AvaloniaComponents.MetaDataView">
  <Design.PreviewWith>
    <Border Padding="20">
       <my:ImageViewer/>
    </Border>
  </Design.PreviewWith>
	<Style Selector=":is(my|ImageViewer)">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate>
					<Grid>
						<Image x:Name="img" Source="{TemplateBinding BitMapSource}"/>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</Styles>
