<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:my="clr-namespace:AvaloniaComponents.MetaDataView"
		xmlns:pdf="using:AvaloniaPdfViewer">
  <Design.PreviewWith>
    <Border Padding="20">
      <my:PdfViewer/>
    </Border>
  </Design.PreviewWith>
	<Style Selector=":is(my|ViewerOfPdf)">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate>
					<Grid>
						<pdf:PdfViewer x:Name="pdfViewer" Source="{TemplateBinding ByteArraySource}"/>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	
</Styles>
